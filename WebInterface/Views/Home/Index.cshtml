@{
    ViewBag.Title = "Home Page";
}

@using (Html.BeginForm("Calculator" , "Home"))
{
    <input name="First" type="number"/>
    <input name="Second" type="number" />
    <select name="operation">
        @for (int i = 0; i < ViewBag.Operation.Count; i++)
        {
            <option value="@ViewBag.Operation[i].Value">@ViewBag.Operation[i].Text</option>
        }
    </select>
    <input type="submit" value="Calculate">
}